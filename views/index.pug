doctype html 
html
    head
        title #{titulo}
        meta(charset="utf-8")
        link(rel="stylesheet" href="main.css")
    body
        main
            h1 #{titulo}
            figure
                img(src=imagen width="400px")
                figcaption #{texto}
            ul
                each vaso in vasos
                    li 
                        a(href="vaso/"+vaso.capacidad) #{vaso.capacidad} &nbsp; | &nbsp;